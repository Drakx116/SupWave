@model SupWave.Models.Playlist

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>
<hr />

<h3> Are you sure you want to delete the "@Model.Name" playlist ? </h3>
<br />

<div>  
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> or go back to the
        <a asp-action="Index"> List</a>
    </form>
</div>
